extends layout

block content
    style.
        input[type=text]{
            max-width:25em;
        }
        .line{
            max-width:40em;
        }
    .container
        .row.header
            .col-xs-12
                h1= title
        .line
        .row
            .col-xs-12
                form.form-horizontal(action= mode==="add"?"add":"update",id='team-add-form',method='get')
                    if mode==="update"
                        input(type="hidden",name="id",value=team._id)
                    .form-group
                        label(for='team-name').control-label.col-sm-2 Team name
                        .col-sm-10
                            input(type='text',id='team-name',placeholder='Name',name='name',value= team===undefined?"":team.name).form-control
                    .form-group
                        label(for='desc').control-label.col-sm-2 Description
                        .col-sm-10
                            input(type='text',id='desc',placeholder='Descption',name='desc',value= team===undefined?"":team.desc).form-control
                    .form-group
                        .col-sm-10.col-sm-offset-2
                            .btn-toolbar
                                button.btn.btn-primary(type='submit',form='team-add-form')= mode==="add"?"Add":"Update"
                                a.btn.btn-default(href="./edit") Cancle
